# Print a random, hopefully interesting, adage.
if (( $+commands[fortune] )); then
  if [[ -t 0 || -t 1 ]]; then
    fortune -a
    print
  fi
else
  # Print the message.
cat <<-EOF

“To be calm is the highest achievement of the self.”
  -- Zen proverb
EOF
fi
